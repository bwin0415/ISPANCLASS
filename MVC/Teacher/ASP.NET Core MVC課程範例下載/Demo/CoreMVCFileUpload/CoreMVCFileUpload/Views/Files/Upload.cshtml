@section Styles
{ 
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
}
<form method="post" asp-controller="Files" asp-action="Upload" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group">
            <label for="files">檔案上傳:</label>
            <input id="files" name="files" type="file" multiple="multiple" />
        </div>
        <div class="form-group">
            <button type="submit" title="執行多檔上傳" class="btn btn-primary">
                <i class="fa fa-upload"></i> 上傳
            </button>
        </div>
    </div>
</form>




