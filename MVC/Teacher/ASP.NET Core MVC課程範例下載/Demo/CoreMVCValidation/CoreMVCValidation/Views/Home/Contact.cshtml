@model CoreMVCValidation.ViewModels.Contacts
@{
    ViewData["Title"] = "Contact";
}
@section Styles
{
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
}
<h1>Contact</h1>

<form asp-controller="Home" asp-action="Contact" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>姓名:</label>
        <input id="Name" name="Name" type="text" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>電子郵件:</label>
        <input id="Email" name="Email" type="email" class="form-control" required placeholder="例如:User@test.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" value="submit" class="btn btn-success" title="送出連絡資訊">
            <i class="fa fa-save"></i> 送出
        </button>
    </div>
</form>
